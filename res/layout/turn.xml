<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
    <TextView
            android:id="@+id/currPlayerName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:typeface="sans"
            android:textStyle="bold"
            android:textColor="#99FF99"
            android:textSize="20sp"
            android:text="-"/>
    <Button
            android:id="@+id/plus1"
            style="@style/ButtonStyle"
            android:onClick="plus_minusClickListener"
            android:layout_below="@id/currPlayerName"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/green_button_bgnd"
            android:text="+1"/>
    <Button
            android:id="@+id/plus2"
            style="@style/ButtonStyle"
            android:onClick="plus_minusClickListener"
            android:layout_alignTop="@id/plus1"
            android:layout_toRightOf="@id/plus1"
            android:layout_marginLeft="10dp"
            android:background="@drawable/green_button_bgnd"
            android:text="+2"/>
    <Button
            android:id="@+id/plus3"
            style="@style/ButtonStyle"
            android:onClick="plus_minusClickListener"
            android:layout_alignTop="@id/plus1"
            android:layout_toRightOf="@id/plus2"
            android:layout_marginLeft="10dp"
            android:background="@drawable/green_button_bgnd"
            android:text="+3"/>
    <Button
            android:id="@+id/plus4"
            style="@style/ButtonStyle"
            android:onClick="plus_minusClickListener"
            android:layout_alignTop="@id/plus1"
            android:layout_toRightOf="@id/plus3"
            android:layout_marginLeft="10dp"
            android:background="@drawable/green_button_bgnd"
            android:text="+4"/>
    <Button
            android:id="@+id/plus6"
            style="@style/ButtonStyle"
            android:onClick="plus_minusClickListener"
            android:layout_below="@id/plus1"
            android:layout_alignLeft="@id/plus1"
            android:layout_marginTop="10dp"
            android:background="@drawable/green_button_bgnd"
            android:text="+6"/>
    <Button
            android:id="@+id/plus8"
            style="@style/ButtonStyle"
            android:onClick="plus_minusClickListener"
            android:layout_alignTop="@id/plus6"
            android:layout_alignLeft="@id/plus2"
            android:layout_toRightOf="@id/plus6"
            android:background="@drawable/green_button_bgnd"
            android:text="+8"/>
    <Button
            android:id="@+id/plus10"
            style="@style/ButtonStyle"
            android:onClick="plus_minusClickListener"
            android:layout_alignTop="@id/plus6"
            android:layout_toRightOf="@id/plus8"
            android:layout_alignLeft="@id/plus3"
            android:background="@drawable/green_button_bgnd"
            android:text="+10"/>
    <Button
            android:id="@+id/minus5"
            style="@style/ButtonStyle"
            android:onClick="plus_minusClickListener"
            android:background="@drawable/red_button_bgnd"
            android:layout_alignTop="@id/plus6"
            android:layout_alignLeft="@id/plus4"
            android:text="-5"/>

    <Button
            android:id="@+id/prevTurnBtn"
            style="@style/DefButtonStyle"
            android:enabled="false"
            android:onClick="prev_nextClickListener"
            android:layout_below="@id/plus6"
            android:layout_marginTop="10dp"
            android:layout_alignLeft="@id/plus1"
            android:text="Предыдущий"/>
    <Button
            android:id="@+id/nextTurnBtn"
            style="@style/DefButtonStyle"
            android:enabled="false"
            android:onClick="prev_nextClickListener"
            android:layout_alignTop="@id/prevTurnBtn"
            android:layout_alignRight="@id/plus4"
            android:text="Следующий"/>
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 android:id="@+id/horzLineTable"
                 android:layout_below="@id/prevTurnBtn"
                 android:layout_marginTop="2dp"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:stretchColumns="1,3">
        <TableRow>
            <View
                    android:layout_column="1"
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#B4B4B4"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:typeface="sans"
                    android:textStyle="bold"
                    android:textColor="#B4B4B4"
                    android:textSize="6sp"
                    android:text="  Последнее изменение счета  "/>
            <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:gravity="center_vertical"
                    android:background="#B4B4B4"/>
        </TableRow>
    </TableLayout>
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 android:id="@+id/lastTurnTable"
                 android:layout_below="@id/horzLineTable"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:stretchColumns="1">
        <TableRow>
            <TextView
                    android:id="@+id/lastTurnName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:typeface="normal"
                    android:textColor="#99FF99"
                    android:textSize="12sp"
                    android:text="-"/>
            <TextView
                    android:id="@+id/lastTurnCount"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:typeface="serif"
                    android:textStyle="bold"
                    android:textColor="#99FF99"
                    android:textSize="12sp"
                    android:text="-"/>
            <!-- <Button android:id="@+id/lastTurnCancelBtn"
                    android:onClick="removeLastClickListener"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:textSize="8sp"
                    android:text="Отменить"/> -->
        </TableRow>
    </TableLayout>
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 android:id="@+id/counterHorzLineTable"
                 android:layout_below="@id/lastTurnTable"
                 android:layout_marginTop="2dp"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:stretchColumns="1,3">
        <TableRow>
            <View
                    android:layout_column="1"
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#B4B4B4"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:typeface="sans"
                    android:textStyle="bold"
                    android:textColor="#B4B4B4"
                    android:textSize="6sp"
                    android:text="  Счет  "/>
            <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:gravity="center_vertical"
                    android:background="#B4B4B4"/>
        </TableRow>
    </TableLayout>
    <ListView
            android:id="@+id/android:list"
            android:layout_below="@id/counterHorzLineTable"
            android:layout_marginTop="2dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:choiceMode="none"
            android:listSelector="@drawable/empty_listview_selector"/>

</RelativeLayout>